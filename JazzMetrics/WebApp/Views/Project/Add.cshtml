@model ProjectWorkModel

@{
    ViewData["Title"] = "Project - Add";
    var headerModel = new ListHeaderViewModel { Path = "/Project", Button = "Back to list", CssClass = "fa-arrow-left" };
}

<partial name="Partials/_ErrorTable" />

<partial name="Partials/_ListHead" model="@headerModel" />

<form asp-controller="Project" asp-action="ProjectAddPost" method="post" class="form-horizontal" role="form">

    <div class="col-md-7 mx-auto">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" rows="10" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-dark" onclick="showProcessing()">Create</button>
    </div>

</form>