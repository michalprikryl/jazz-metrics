@model ExportViewModel

<div class="form-horizontal">
    <div class="col-md-7 mx-auto">
        @for (int i = 0; i < Model.Metrics.Count; i++)
        {
            <div class="form-row align-items-center">
                <div class="form-group col-md-12 d-flex align-items-baseline">
                    <input class="form-control-input metric mr-2" type="checkbox" id="checkbox-@i" value='@Html.Raw(Json.Serialize(Model.Metrics[i]))' checked />
                    <label class="form-check-label" for="checkbox-@i">@Model.Metrics[i].MetricName</label>
                </div>
            </div>
        }
    </div>
</div>
