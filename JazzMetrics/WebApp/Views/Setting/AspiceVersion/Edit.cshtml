@model AspiceVersionWorkModel

@{
    ViewData["Title"] = "Automotive SPICE version - Edit";
    var headerModel = new ListHeaderViewModel { Path = "/Setting/AspiceVersion", Button = "Back to list", CssClass = "fa-arrow-left" };
}

<partial name="Partials/_ErrorTable" />

<partial name="Partials/_ListHead" model="@headerModel" />

<form asp-controller="Setting" asp-action="AspiceVersionEditPost" method="post" class="form-horizontal" role="form">

    <input asp-for="Id" type="hidden" />

    <div class="col-md-7 mx-auto">
        <div class="form-group">
            <label asp-for="VersionNumber" class="control-label"></label>
            <input asp-for="VersionNumber" class="form-control" />
            <span asp-validation-for="VersionNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ReleaseDate" class="control-label"></label>
            <div class="input-group">
                <input asp-for="ReleaseDate" class="form-control date" autocomplete="off" />
                <div class="input-group-append">
                    <span class="input-group-text"><i class="fa fa-calendar-alt"></i></span>
                </div>
            </div>
            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" rows="10" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-dark" onclick="showProcessing()">Save</button>
    </div>

</form>