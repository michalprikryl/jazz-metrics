
@{
    ViewData["Title"] = "Settings";
}

<div class="row mb-4">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Company</h5>
                <p class="card-text">Settings of company and company users.</p>
                <a asp-controller="Setting" asp-action="Company" class="btn btn-secondary">Go to setting</a>
            </div>
        </div>
    </div>
</div>

@if (User.IsAdmin())
{
    <div class="row mb-4">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Metrics</h5>
                    <p class="card-text">Settings of metrics.</p>
                    <a asp-controller="Setting" asp-action="Metric" class="btn btn-secondary">Go to setting</a>
                </div>
            </div>
        </div>
    </div>
}

@if (User.IsInRole(AppController.RoleSuperAdmin))
{
    <div class="row mb-4">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Metric types</h5>
                    <p class="card-text">Settings of metric types.</p>
                    <a asp-controller="Setting" asp-action="MetricType" class="btn btn-secondary">Go to setting</a>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Metric affected fields</h5>
                    <p class="card-text">Settings of metric affected field of project.</p>
                    <a asp-controller="Setting" asp-action="AffectedField" class="btn btn-secondary">Go to setting</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Automotive SPICE</h5>
                    <p class="card-text">Settings of Automotive SPICE versions.</p>
                    <a asp-controller="Setting" asp-action="AspiceVersion" class="btn btn-secondary">Go to setting</a>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Automotive SPICE processes</h5>
                    <p class="card-text">Settings of Automotive SPICE processes.</p>
                    <a asp-controller="Setting" asp-action="AspiceProcess" class="btn btn-secondary">Go to setting</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">App error</h5>
                    <p class="card-text">Application error list.</p>
                    <a asp-controller="Setting" asp-action="AppError" class="btn btn-secondary">Go to the app error list</a>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">App setting</h5>
                    <p class="card-text">Application setting.</p>
                    <a asp-controller="Setting" asp-action="AppSetting" class="btn btn-secondary">Go to setting</a>
                </div>
            </div>
        </div>
    </div>
}