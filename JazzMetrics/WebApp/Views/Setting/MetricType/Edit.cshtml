@model MetricTypeWorkModel

@{
    ViewData["Title"] = "Metric type - Edit";
    var headerModel = new ListHeaderViewModel { Path = "/Setting/MetricType", Button = "Back to list", CssClass = "fa-arrow-left" };
}

<partial name="Partials/_ErrorTable" />

<partial name="Partials/_ListHead" model="@headerModel" />

<form asp-controller="Setting" asp-action="MetricTypeEditPost" method="post" class="form-horizontal" role="form">

    <input asp-for="Id" type="hidden" />

    <div class="col-md-7 mx-auto">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-dark" onclick="javascript: showProcessing()">Save</button>
    </div>

</form>