@model LoginViewModel

@{
    ViewData["Title"] = "Login";

    var param = new Dictionary<string, string>
{
{ "returnUrl", ViewBag.ReturnUrl }
};
}

<h2>Login</h2>
<hr />

<partial name="Partials/_ErrorTable" />

<form asp-controller="user" asp-action="login" asp-all-route-data="param" method="post" class="form-horizontal" role="form">


    <div class="col-md-5 mx-auto">
        <div class="form-group">
            <label asp-for="Username" class="control-label col-md-5"></label>
            <div class="col-md-10">
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        @*<div class="form-group">
                @Html.LabelFor(model => model.RememberMe, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.RememberMe)
                        @Html.ValidationMessageFor(model => model.RememberMe, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-dark" onclick="javascript: showProcessing()" />
            </div>
        </div>
    </div>

</form>

<partial name="Partials/_Processing" />

