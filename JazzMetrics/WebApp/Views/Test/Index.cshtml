@model TestViewModel

@{
    ViewData["Title"] = "Test";
}

<h2>Test připojení</h2>

<br />

<h5>Připojení k API</h5>
<h6>
    @if (Model.ConnectionApi)
    {
        <partial name="Partials/_Success" model="Model.ApiResultMessage" />
    }
    else
    {
        <partial name="Partials/_Failure" model="Model.ApiResultMessage" />
    }
    @Html.DisplayFor(m => Model.MessageApi) @Html.Raw($"(HTTP status {Model.HTTPResponseApi})")
</h6>

<br />

<h5>Připojení k DB</h5>
<h6>
    @if (Model.ConnectionDB)
    {
        <partial name="Partials/_Success" model="Model.DbResultMessage" />
    }
    else
    {
        <partial name="Partials/_Failure" model="Model.DbResultMessage" />
    }
    @Html.DisplayFor(m => Model.MessageDB)
</h6>

<br />


